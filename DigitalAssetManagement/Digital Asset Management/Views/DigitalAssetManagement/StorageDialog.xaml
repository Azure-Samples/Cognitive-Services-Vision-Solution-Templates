<ContentDialog
    x:Class="DigitalAssetManagementTemplate.Views.DigitalAssetManagement.StorageDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DigitalAssetManagementTemplate.Views.DigitalAssetManagement"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Connect to Azure Storage"
    PrimaryButtonText="Connect"
    SecondaryButtonText="Cancel"
    DefaultButton="Primary">

    <Grid>
        <StackPanel>
            <TextBlock Text="Enter a shared access signature (SAS) URI to a container of images"/>
            <TextBox x:Name="Sas" Text="{x:Bind SasUri, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
    </Grid>
</ContentDialog>
